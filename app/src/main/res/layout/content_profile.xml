<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Profile"
    tools:showIn="@layout/app_bar_profile">

    <EditText
        android:id="@+id/AgeID"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Age "
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/BioId"
        app:layout_constraintEnd_toEndOf="@+id/BioId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BioId" />

    <EditText
        android:id="@+id/HeightId"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Height in ft"
        android:inputType="numberDecimal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/WeightID"
        app:layout_constraintEnd_toEndOf="@+id/WeightID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/WeightID" />

    <EditText
        android:id="@+id/WeightID"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Weight in lbs"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/GenderID"
        app:layout_constraintEnd_toEndOf="@+id/GenderID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/GenderID" />

    <EditText
        android:id="@+id/GenderID"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Gender "
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/FullNameID"
        app:layout_constraintEnd_toEndOf="@+id/FullNameID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FullNameID" />

    <EditText
        android:id="@+id/FullNameID"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Full Name "
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/AgeID"
        app:layout_constraintEnd_toEndOf="@+id/AgeID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AgeID" />

    <EditText
        android:id="@+id/BioId"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/et_bg_main"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Bio "
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/ProfileID"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:background="@drawable/btn_bg_main"
        android:fontFamily="sans-serif-medium"
        android:text="Save"
        android:textColor="@color/gradStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>